.hidden
  position: absolute
  visibility: hidden
  width: 0
  height: 0

.loan__content
  position: relative
  padding: 32px
  background-image: linear-gradient(-180deg, #05307C 0%, #011953 100%)
  border: 1px solid desaturate($color-red, 60%)
  border-radius: 5px

  +respond-to($small)
    padding: 24px

  +respond-to($xsmall)
    background: transparent
    padding: 0
    border: none

.loan__hand
  position: absolute
  top: 0
  right: 68px

  +respond-to($small)
    right: 40px

  +respond-to($xsmall)
    position: static
    display: flex
    justify-content: center
    border-top: 1px solid $color-red
    margin-bottom: 24px

.loan__hand-img
  +respond-to($medium)
    width: 168px
    height: 122px

  +respond-to($xsmall)
    width: 240px
    height: 175px

.loan__text
  @extend .main-text
  color: $color-white
  margin-bottom: 24px

.loan__text--upper
  margin-right: 373px
  +respond-to($medium)
    margin-right: 263px

  +respond-to($small)
    margin-right: 223px

  +respond-to($xsmall)
    margin-right: 0

.loan__text--colored
  color: $color-red
  margin-bottom: 0

.loan__text--title
  text-transform: uppercase
  font-weight: 600
  font-size: 12px

.loan__text--info
  font-style: italic

.loan__rates
  display: flex
  flex-direction: row
  justify-content: flex-start
  align-items: flex-end
  flex-wrap: wrap
  opacity: 0
  transition: opacity 1s ease-in
  +respond-to($xsmall)
    padding: 0 8px

.loan__rate-tooltip
  position: absolute
  top: 0
  left: 9px
  padding: 1px
  background: $color-red
  border-radius: 4px
  margin-bottom: 27px
  opacity: 0
  transition: opacity .3s ease-out
  z-index: 1
  &:after
    position: absolute
    content: ''
    left: 50%
    transform: translateX(-50%)
    bottom: -6px
    width: 0
    height: 0
    border-left: 6px solid transparent
    border-right: 6px solid transparent
    border-top: 6px solid $color-red

  +respond-to($xsmall)
    left: 7px

.loan__rate--with-tooltip
  .loan__rate-tooltip
    opacity: 1

.loan__rate-tooltip--visible
  opacity: 1

.loan__rate-tooltip-interest
  background: $color-white
  color: #0a3a82
  font-size: 14px
  line-height: 18px
  font-weight: 600
  text-align: center
  padding: 5px 4px 3px 4px

.loan__rate-tooltip-payout
  color: #f02e2d
  font-size: 10px
  line-height: 13px
  font-weight: 600
  text-align: center
  padding: 6px

.loan__coins
  display: flex
  flex-direction: column-reverse

.loan__rate
  width: 49px
  position: relative
  padding-left: 19px
  padding-top: 65px
  box-sizing: border-box
  margin-right: 14px
  opacity: 1
  transition: opacity .7s

  +respond-from($large)
    margin-right: 16px

  +respond-between($medium, $large)
    &:nth-child(17n)
      margin-right: 0

  +respond-between($small, $medium)
    margin-right: 15px
    &:nth-child(13n)
      margin-right: 0

  +respond-between($xsmall, $small)
    width: 45px
    &:nth-child(11n)
      margin-right: 0

  +respond-between($xxsmall-iphone, $xsmall)
    margin-right: 10px

  +respond-to($xxsmall)
    &:nth-child(4n)
      margin-right: 0

.loan__rate-state
  position: absolute
  width: 100px
  left: -40px
  bottom: 75px
  transform: rotate(-90deg)
  color: $color-white
  font-size: 10px
  line-height: 13px
  text-transform: uppercase
  font-weight: 600

.loan__coins-img
  transition: .5s
  margin-top: -7px
  position: absolute
  will-change: transform

.loan__rate-rank
  margin-top: 7px
  text-align: center
  color: #87c9fb
